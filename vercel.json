{
  "version": 2,
  "buildCommand": "npm install --legacy-peer-deps --prefix frontend && npm run build --prefix frontend",
  "outputDirectory": "frontend/dist",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/dist/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "backend/server.js"
    },
    {
      "src": "^(?!/api/).*",
      "dest": "frontend/dist/index.html"
    }
  ]
}
